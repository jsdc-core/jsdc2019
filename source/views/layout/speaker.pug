extends ../partials/_layout

block content
  section#speaker
    .container
      div(style='text-align: center;')
          h3.title-date 9/28
          h3.title-date JavaScript 新技術的入門與導入
          h2.title 講者
          span.border
      div.large-wrapper
          each val, index in speakers
              .wrapper
                .main-box
                  .img-box
                    img.img-responsive(src='./images/speakers/'+val.image, alt='')
                  .text-box.text-center
                    h5.nopadding.title #{val.name}
                    p.subtext #{val.company}
                    ul.sc-icons
                      //- li
                      //-   a(href='#')
                      //-     i.fa.fa-twitter
                      if val.links.github
                        li
                          a(href=val.links.github)
